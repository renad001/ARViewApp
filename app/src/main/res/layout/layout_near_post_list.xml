<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.cardview.widget.CardView
    android:layout_width="300dp"
    android:layout_height="85dp"
    app:cardCornerRadius="40dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:backgroundTint="#ddd"

    >

    <RelativeLayout
        android:id="@+id/NRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"
            app:civ_border_color="@color/grey"
            app:civ_border_width="2dp"
            android:src="@drawable/ic_launcher_background"
            />

        <ImageView
            android:id="@+id/heart"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@id/profile_photo"
            android:layout_marginStart="240dp"
            android:src="@mipmap/ic_empty_like"
            />

        <TextView
            android:id="@+id/likeNum"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/profile_photo"
            android:layout_marginStart="265dp"
            android:layout_marginTop="5dp"
            android:text="##" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_direction"
            android:layout_alignTop="@id/profile_photo"
            android:layout_marginStart="255dp"/>


        <TextView
            android:id="@+id/postName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginStart="85dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="PostName"
            />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postName"
            android:layout_marginStart="85dp"
            android:textSize="14dp"
            android:text="username"
            />

        <TextView
            android:id="@+id/far"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_marginStart="85dp"
            android:textSize="14dp"
            android:text="how much far"
            />

    </RelativeLayout>




</androidx.cardview.widget.CardView>

</RelativeLayout>