<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_below="@id/text"
        android:layout_marginBottom="5dp"
        android:layout_alignParentEnd="true"
        android:text="Send Notification for all near event"
         />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginBottom="5dp"
        android:text="Send Notification only following user"
        android:layout_below="@id/switch1"
        android:layout_alignParentEnd="true"
         />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginBottom="5dp"
        android:text="Send Notification on my Activity"
        android:layout_below="@id/switch2"
        android:layout_alignParentEnd="true"
        />

    <Switch
        android:id="@+id/switch4"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_marginBottom="5dp"
        android:text="Send Chats Notification"
        android:layout_below="@id/switch3"
        android:layout_alignParentEnd="true"
         />

</RelativeLayout>
</RelativeLayout>