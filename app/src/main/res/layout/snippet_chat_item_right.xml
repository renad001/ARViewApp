<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_photoR"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        app:civ_border_color="@android:color/background_light"
        app:civ_border_width="1dp"
        android:src="@mipmap/ic_profile_defuelt"
        />


    <TextView
        android:id="@+id/messsageTextR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/backgraoud_message_right"
        android:layout_toLeftOf="@id/profile_photoR"
        android:textColor="#fff"
        android:padding="8dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="hello"
        />


    <ImageView
        android:id="@+id/messagePhotoR"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/backgraoud_message_right"
        android:layout_toLeftOf="@id/profile_photoR"
        android:textColor="#fff"
        android:padding="8dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        />
</RelativeLayout>